            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/a" android:textSize="30sp"/>
    <TextView
            android:text="標本b"
            android:layout_width="313dp"
            android:layout_height="80dp" android:id="@+id/b"
